<UserControl x:Class="MangaReader.UI.Setting.ProxySettingSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MangaReader.UI.Setting"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <ComboBox ItemsSource="{Binding ProxySettingModels}" SelectedItem="{Binding SelectedProxySettingModel}">
    <ComboBox.ItemTemplate>
      <DataTemplate>
        <WrapPanel>
          <TextBlock Text="{Binding Name}"/>
        </WrapPanel>
      </DataTemplate>
    </ComboBox.ItemTemplate>
  </ComboBox>
</UserControl>
