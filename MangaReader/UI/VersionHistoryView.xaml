<Window x:Class="MangaReader.UI.VersionHistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:MangaReader.Properties"
        Title="{x:Static properties:Strings.Update_Title}" Height="400" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="{Binding History}" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button Content="Ok" Grid.Row="1" Grid.Column="1" Click="Ok_Click" IsDefault="True"/>
        <StatusBar  Grid.Row="1" Grid.Column="0">
            <StatusBarItem HorizontalContentAlignment="Center">
                <TextBlock Text="{Binding Version}"/>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
