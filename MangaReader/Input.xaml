<Window x:Class="MangaReader.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="107.333" Width="220.8"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <StackPanel Margin="0,0,-0.4,0.4">
        <TextBlock Text="Введите ссылку на мангу" Margin="10,0,9.4,0" />
        <TextBox x:Name="Result" Margin="10,0,9.4,0" />
        <Button Content="Добавить" Click="Add_click" IsDefault="True" Height="23" Margin="10,0,9.4,0"/>
    </StackPanel>
</Window>