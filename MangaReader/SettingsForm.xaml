<Window x:Class="MangaReader.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mangaReader="clr-namespace:MangaReader"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:resx="clr-namespace:MangaReader.Properties"
        WindowStartupLocation="CenterOwner"
        Icon="Icons/main.ico"
        Title="{x:Static resx:Strings.Library_Action_Settings}"
        Height="350"
        Width="450"
        Closed="SettingsForm_OnClosed">
    <Window.Resources>
        <ObjectDataProvider x:Key="Languages"
                    MethodName="GetValues" 
                    ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="mangaReader:Settings+Languages" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"></ColumnDefinition>
            <ColumnDefinition Width="15*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" 
                   TextTrimming="WordEllipsis" 
                   Text="{x:Static resx:Strings.Settings_DownloadMangaTo}" 
                   VerticalAlignment="Center"/>
        <mangaReader:DownloadFolderSetting Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ReadManga"/>
        <mangaReader:DownloadFolderSetting Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="Acomics"/>

        <TextBlock Grid.Row="3" Grid.Column="0" 
                   TextTrimming="WordEllipsis" 
                   Text="{x:Static resx:Strings.Settings_Language}" 
                   VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="1" 
                  x:Name="Language" 
                  IsSynchronizedWithCurrentItem="True" 
                  ItemsSource="{Binding Source={StaticResource Languages}}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                   TextWrapping="Wrap" 
                   TextTrimming="WordEllipsis" 
                   Text="{x:Static resx:Strings.Settings_LanguageHint}" 
                   VerticalAlignment="Center"/>

        <TextBlock Grid.Row="5" Grid.Column="0" 
                   TextTrimming="WordEllipsis" 
                   Text="{x:Static resx:Strings.Settings_UpdateEver}" 
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" 
                  x:Name="AutoUpdate"
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="5" Grid.Column="1" 
                   TextTrimming="WordEllipsis" 
                   Text="{x:Static resx:Strings.Settings_Hours}" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>

        <CheckBox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                  x:Name="UpdateReaderBox" 
                  Content="{x:Static resx:Strings.Settings_UpdateReader}" 
                  VerticalAlignment="Center"/>
        <CheckBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                  x:Name="MinimizeToTray" 
                  Content="{x:Static resx:Strings.Settings_MinimizeToTray}" 
                  VerticalAlignment="Center"/>
        <CheckBox Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                  x:Name="UpdateBox" 
                  Content="{x:Static resx:Strings.Settings_Update}" 
                  VerticalAlignment="Center"/>
        <CheckBox Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                  x:Name="CompressBox" 
                  Content="{x:Static resx:Strings.Settings_Compress}" 
                  VerticalAlignment="Center"/>
    </Grid>
</Window>
