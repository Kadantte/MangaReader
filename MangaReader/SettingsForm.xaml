<Window x:Class="MangaReader.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mangaReader="clr-namespace:MangaReader"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:resx="clr-namespace:MangaReader.Properties"
        WindowStartupLocation="CenterOwner"
        Icon="main.ico"
        Title="{x:Static resx:Strings.Library_Action_Settings}" Height="272" Width="312.8"
        Closed="SettingsForm_OnClosed">
    <Window.Resources>
        <ObjectDataProvider x:Key="Languages"
                    MethodName="GetValues" 
                    ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="mangaReader:Settings+Languages" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <CheckBox x:Name="UpdateBox" Content="{x:Static resx:Strings.Settings_Update}" Margin="10,181,13.4,0" Height="16" VerticalAlignment="Top"/>
        <TextBlock TextTrimming="WordEllipsis" Text="{x:Static resx:Strings.Settings_DownloadMangaTo}" Margin="10,9,13.4,0" Height="14" VerticalAlignment="Top"></TextBlock>
        <TextBlock TextTrimming="WordEllipsis" x:Name="DownloadPath"  Margin="10,34,78.4,0" Height="15" VerticalAlignment="Top"></TextBlock>
        <Button Content="{x:Static resx:Strings.Settings_ChangeButton}" Click="ChangeFolder" Margin="0,33,13.4,0" Height="23" HorizontalAlignment="Right" Width="60" VerticalAlignment="Top"/>
        <TextBlock TextTrimming="WordEllipsis" Text="{x:Static resx:Strings.Settings_Language}" Margin="10,78,109.4,0" Height="14" VerticalAlignment="Top"></TextBlock>
        <ComboBox x:Name="Language" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding Source={StaticResource Languages}}" Height="26" Margin="0,71,13.4,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="91"></ComboBox>
        <CheckBox x:Name="UpdateReaderBox" Content="{x:Static resx:Strings.Settings_UpdateReader}" Margin="10,155,13.4,0" Height="16" VerticalAlignment="Top"/>
        <CheckBox x:Name="CompressBox" Content="{x:Static resx:Strings.Settings_Compress}" Margin="10,207,13.4,0" Height="16" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" TextTrimming="WordEllipsis" Text="{x:Static resx:Strings.Settings_LanguageHint}" Margin="38,112,38.4,0" Height="34" VerticalAlignment="Top"/>
    </Grid>
</Window>
