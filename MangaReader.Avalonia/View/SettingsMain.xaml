<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Design.Width="400" Design.Height="300">
  <Grid RowDefinitions="Auto, Auto, Auto, Auto"
        DataContext="{Binding}"
        Margin="30">
    <WrapPanel Grid.Row="0" Margin="0, 10, 0, 10">
      <TextBlock Margin="0, 10, 0, 10"
                 VerticalAlignment="Center"
                 Text="Update manga in library every, hours  "/>
      <TextBox VerticalAlignment="Center"
               Width="50"
               Text="{Binding AutoupdateLibraryInHours}"/>
    </WrapPanel>

    <WrapPanel Grid.Row="1" Margin="0, 10, 0, 10">
      <CheckBox IsChecked="{Binding CheckAppUpdateOnStart}"/>
      <TextBlock VerticalAlignment="Center" Text="Update app on start"/>
    </WrapPanel>

    <WrapPanel Grid.Row="2" Margin="0, 10, 0, 10">
      <CheckBox IsChecked="{Binding MinimizeToTray}"/>
      <TextBlock VerticalAlignment="Center" Text="Minimize to tray"/>
    </WrapPanel>

    <WrapPanel Grid.Row="3" Margin="0, 10, 0, 10" HorizontalAlignment="Right">
      <Button Command="{Binding Save}" Content="Save"/>
      <Button Command="{Binding UndoChanged}" Content="Cancel"/>
    </WrapPanel>
  </Grid>
</UserControl>