<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:MangaReader.Avalonia.View;assembly=MangaReader.Avalonia"
             Design.DataContext="{x:Static view:Designer.MangaModel}"
             Design.Width="800"
             xmlns:av="clr-namespace:MangaReader.Avalonia;assembly=MangaReader.Avalonia">
  <Grid RowDefinitions="Auto, Auto, Auto, *"
        ColumnDefinitions="38*, 62*"
        DataContext="{Binding}"
        Margin="20">

    <Image Grid.Column="0"
           Grid.Row="0"
           Grid.RowSpan="5"
           Source="{Binding Cover, Converter={x:Static av:BitmapTypeConverter.Instance}}"/>

    <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Text="{Binding OriginalName}" TextWrapping="Wrap" FontSize="20"/>
    <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Text="{Binding Status}" TextWrapping="Wrap"/>
    <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Text="{Binding Description}" TextWrapping="Wrap"/>
    <view:MangaProperties Grid.Column="1" Grid.Row="3" IsVisible="{Binding Saved}"/>
    <WrapPanel Grid.Column="1" Grid.Row="3" IsVisible="{Binding !Saved}" HorizontalAlignment="Center">
      <Button Command="{Binding Save}" Content="Read (not implement)"/>
      <Button Command="{Binding UndoChanged}" Content="Subscribe (not implement)"/>
    </WrapPanel>
  </Grid>
</UserControl>